const mongoose = require("mongoose")

const Schema = mongoose.Schema

const ContactUsSchema = new Schema(
    {
        user_id: {
            type: Schema.Types.ObjectId,
            ref: "user",
        },
        first_name: String,
        email: String,
        subject: String,
        your_message: String,
        is_deleted: {
            type: Boolean,
            default: false,
        },
    },
    { timestamps: true }
)

module.exports = mongoose.model("contactUs", ContactUsSchema)
